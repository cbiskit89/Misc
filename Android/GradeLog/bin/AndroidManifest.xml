<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gradelog"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/grade_log_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.gradelog.CourseListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>  
        </activity>
        <activity
            android:name="com.example.gradelog.CourseAddActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.gradelog.CategoryListActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.gradelog.GradeAddActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.gradelog.GradeListActivity"
            android:label="@string/app_name" >
        </activity>
    </application>
</manifest>
